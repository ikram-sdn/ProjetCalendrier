{# templates/admin/event_list.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event List</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.status }}</td>
                    <td>
                        <form action="{{ path('admin_event_status', {'id': event.id}) }}" method="post">
                            <select name="status">
                                <option value="valid" {{ event.status == 'valid' ? 'selected' : '' }}>Valid</option>
                                <option value="refused" {{ event.status == 'refused' ? 'selected' : '' }}>Refused</option>
                                <option value="pending" {{ event.status == 'pending' ? 'selected' : '' }}>Pending</option>
                            </select>
                            <button type="submit">Change Status</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
